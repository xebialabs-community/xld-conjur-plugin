<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.xebialabs.com/deployit/synthetic"
  xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

   <type type="conjur.DynamicDictionary" extends="dynamic.PythonDynamicDictionary">
        <property name="conjurServer"            kind="ci"        category="Conjur" required="false" referenced-type="conjur.Server"/>
        <property name="scriptFile" default="dict/conjur/load_data.py" hidden="true"/>
    </type>

    <type-modification type="dynamic.PythonDynamicDictionary">
        <method name="load" label="Load the dictionary " delegate="jythonScript"
                script="dict/python/load.py">
        </method>
    </type-modification>

    <type-modification type="udm.Environment">
        <property name="overrideHostCredentials" kind="boolean"   category="Conjur" required="false" default="false"/>
        <property name="conjurServer"            kind="ci"        category="Conjur" required="false" referenced-type="conjur.Server"/>
        <property name="credentialsType"         kind="enum"      category="Conjur" required="false" default="CT_USERNAME" enum-class="ext.deployit.community.plugin.conjur.ci.CredentialsType"/>
        <property name="conjurKeyTemplate"       kind="string"    category="Conjur" required="false" label="Key Template"  description="Template used to define the secret's key." default="host/${env.name}/${host.name}"/>
        <property name="checkConnection"         kind="boolean"   category="Conjur" required="false" default="true" />
    </type-modification>

    <!-- Enable retrieve of host credentials from Conjur -->
    <type-modification type="overthere.Host">
        <property name="managedByConjur"  kind="boolean" category="Conjur" required="false" default="false" />
        <property name="conjurServer"     kind="ci"      category="Conjur" required="false" referenced-type="conjur.Server"/>
        <property name="conjurKey"        kind="string"  category="Conjur" required="false" description="Alternative key to look up in the vault, instead it is secret/[ci.id]"/>
    </type-modification>

    <!-- Conjur server as shared configuration -->
    <type type="conjur.Server" extends="udm.Configuration" label="Conjur: Server">
      <property name="url"      required="true" kind="string" label="Conjur Server URL" description="Full URL to the Conjur Server." />
      <property name="account"  required="true" kind="string" label="Account"           description="ID of the Conjur account holding the secrets."/>
      <property name="username" required="true" kind="string" label="Username"          description="Username or host name for authentication. Note: Prepend host name with host/"/>
      <property name="password" required="true" kind="string" label="Password/API key"    description="Password or API key for authentication." password="true"/>
      <!-- control tasks -->
      <method name="checkConnection" label="Check Connection" delegate="jythonScript" script="conjur/control/check_connection.py"/>

    </type>

  </synthetic>
