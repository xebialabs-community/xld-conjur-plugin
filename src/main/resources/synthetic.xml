<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.xebialabs.com/deployit/synthetic"
  xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

    <type-modification type="udm.Environment">
        <property name="overrideHostCredentials" kind="boolean"   category="Conjur" required="false" default="false"/>
        <property name="conjurServer"            kind="ci"        category="Conjur" required="false" referenced-type="conjur.Server"/>
        <property name="credentialsType"         kind="enum"      category="Conjur" required="false" default="CT_USERNAME" enum-class="ext.deployit.community.plugin.conjur.ci.CredentialsType"/>
        <property name="conjurKeyTemplate"       kind="string"    category="Conjur" required="false" label="Key Template"  description="Template used to define the secret's key." default="host/${env.name}/${host.name}"/>
        <property name="checkConnection"         kind="boolean"   category="Conjur" required="false" default="true" />
    </type-modification>

    <!-- Conjur server as shared configuration -->
    <type type="conjur.Server" extends="udm.Configuration" label="Conjur: Server">
      <property name="conjurURL"      required="true" label="Conjur Server URL" description="Full URL to the Conjur Server." />
      <property name="conjurAccount"  required="true" label="Account"           description="ID of the Conjur account holding the secrets."/>
      <property name="username"       required="true" label="Username"          description="Username for authentication."/>
      <property name="password"       required="true" label="Password/Token"    description="Password for authentication." password="true"/>
    </type>

  </synthetic>
